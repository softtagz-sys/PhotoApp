<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:effects="clr-namespace:PhotoApp.Effects"
             xmlns:helpers="clr-namespace:PhotoApp.Helpers;assembly=PhotoApp"
             x:Class="PhotoApp.StartPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#F0F0F0">
            <Frame  
                CornerRadius="0" 
                BackgroundColor="#F0F0F0"
                VerticalOptions="Start"
                BorderColor="Purple">
                
                <Image 
                    Source="{helpers:ImageResource PhotoApp.Assets.Images.Logo_PhotoApp_Black.png}"
                    HeightRequest="100"
                    WidthRequest="00"
                    Margin="5"/>
            </Frame>
            
            <StackLayout 
                VerticalOptions="Start"
                Margin="0,20,0,0">                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6"/>
                    </Grid.ColumnDefinitions>
                    <Label                         
                        Grid.Row="0"
                        Grid.ColumnSpan="7"
                        Text="Please enter your eventcode:" 
                        TextColor="Black"
                        FontSize="Medium" 
                        HorizontalTextAlignment="Center"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="Center"
                        Margin="0,10,0,0"/>
                    <!--#region Code entries-->
                    <Frame
                        Grid.Row="1" 
                        Grid.Column="1"
                        CornerRadius="10"
                        Padding="10,0">
                        <Entry
                        x:Name="entryCode1"
                        MaxLength="1" 
                        Placeholder="0" 
                        PlaceholderColor="Black"
                        Keyboard="Numeric" 
                        ReturnType="Next">
                            <Entry.Effects>
                                <effects:PlainEntry/>
                            </Entry.Effects>
                        </Entry>
                    </Frame>
                    <Frame
                        Grid.Row="1" 
                        Grid.Column="2"
                        CornerRadius="10"
                        Padding="10,0">
                        <Entry
                            x:Name="entryCode2" 
                            MaxLength="1" 
                            Placeholder="0" 
                            PlaceholderColor="Black"
                            Keyboard="Numeric" 
                            ReturnType="Next">
                            <Entry.Effects>
                                <effects:PlainEntry/>
                            </Entry.Effects>
                        </Entry>
                    </Frame>
                    <Frame
                        Grid.Row="1" 
                        Grid.Column="3"
                        CornerRadius="10"
                        Padding="10,0">
                        <Entry
                            x:Name="entryCode3" 
                            MaxLength="1" 
                            Placeholder="0" 
                            PlaceholderColor="Black"
                            Keyboard="Numeric" 
                            ReturnType="Next">
                            <Entry.Effects>
                                <effects:PlainEntry/>
                            </Entry.Effects>
                        </Entry>
                    </Frame>
                    <Frame
                        Grid.Row="1" 
                        Grid.Column="4"
                        CornerRadius="10"
                        Padding="10,0">
                        <Entry
                            x:Name="entryCode4" 
                            MaxLength="1" 
                            Placeholder="0" 
                            PlaceholderColor="Black"
                            Keyboard="Numeric" 
                            ReturnType="Next">
                            <Entry.Effects>
                                <effects:PlainEntry/>
                            </Entry.Effects>
                        </Entry>
                    </Frame>
                    <Frame
                        Grid.Row="1" 
                        Grid.Column="5"
                        CornerRadius="10"
                        Padding="10,0">
                        <Entry
                            x:Name="entryCode5" 
                            MaxLength="1" 
                            Placeholder="0" 
                            PlaceholderColor="Black"
                            Keyboard="Numeric" 
                            ReturnType="Next">
                            <Entry.Effects>
                                <effects:PlainEntry/>
                            </Entry.Effects>
                        </Entry>
                    </Frame>
                    <Frame
                        Grid.Row="1" 
                        Grid.Column="6"
                        CornerRadius="10"
                        Padding="10,0">
                        <Entry
                            x:Name="entryCode6" 
                            MaxLength="1" 
                            Placeholder="0" 
                            PlaceholderColor="Black"
                            Keyboard="Numeric" 
                            ReturnType="Next">
                            <Entry.Effects>
                                <effects:PlainEntry/>
                            </Entry.Effects>
                        </Entry>
                    </Frame>
                    <!--#endregion-->
                    
                </Grid>

                <Button 
                    x:Name="BtnConnectToEvent" 
                    Text="Connect to event" 
                    Margin="0,20,0,0"
                    Clicked="BtnConnectToEvent_Clicked" 
                    Style="{StaticResource buttonStyle}"/>
            </StackLayout>

            <Label 
                Text="Or create your own as a host:"
                TextColor="Black"
                FontSize="Medium" 
                HorizontalTextAlignment="Center" 
                VerticalOptions="Center"
                Margin="0,50,0,10"/>

            <StackLayout VerticalOptions="StartAndExpand">
                <Button x:Name="btnLogIn" Text="Login" Clicked="btnLogIn_Clicked" Style="{StaticResource buttonStyle}"/>
                <Label Text="or" TextColor="Black" FontSize="Small" HorizontalTextAlignment="Center"/>
                <Button x:Name="BtnRegister" Text="Register" Clicked="BtnRegister_Clicked" Style="{StaticResource buttonStyle}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>