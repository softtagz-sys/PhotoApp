<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoApp.MakeEventPage"
             Title="Maak een nieuw event aan">
    <StackLayout Margin="10">

        <Label VerticalOptions="Start" Text="Info:" FontSize="15" x:Name="lblInfo"/>
        <Entry Placeholder="Naam" x:Name="entryEventNaam"/>

        <Label Text="Begin:" FontSize="15" x:Name="lblBegin"/>        
        <DatePicker x:Name="dtpBeginDatum" Format="D"/>

        <Label Text="Einde:" FontSize="15" x:Name="lblEinde"/>
        <DatePicker x:Name="dtpEindDatum" MinimumDate="{Binding Source={x:Reference dtpEindDatum}, Path=Date}" Format="D"/>
        
        <Label x:Name="lblCode" HorizontalOptions="Center" VerticalOptions="Center"/>

        <Button Text="Maak event aan" x:Name="btnEventMaken" Clicked="btnEventMaken_Clicked"/>
        
    </StackLayout>
</ContentPage>