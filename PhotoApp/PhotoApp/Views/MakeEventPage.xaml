<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoApp.MakeEventPage"
             Title="Maak een nieuw event aan">
    <StackLayout Margin="10">

        <Label VerticalOptions="Start" Text="Info:" FontSize="15" x:Name="lblInfo"/>
        <Entry Placeholder="Naam" x:Name="entryEventNaam"/>

        <Label Text="Begin:" FontSize="15" x:Name="lblBegin"/>
        <DatePicker x:Name="dtpBeginDatum" Format="D" DateSelected="dtpBeginDatum_DateSelected"/>        
        <TimePicker x:Name="tpBeginTijd" Format="T" PropertyChanged="tpBeginTijd_PropertyChanged"/>

        <Label Text="Einde:" FontSize="15" x:Name="lblEinde"/>
        <DatePicker x:Name="dtpEindDatum" MinimumDate="{Binding Source={x:Reference dtpEindDatum}, Path=Date}" Format="D" DateSelected="dtpEindDatum_DateSelected"/>
        <TimePicker x:Name="tpEindTijd" Format="T" PropertyChanged="tpEindTijd_PropertyChanged"/>

        <Label Text="Code voor je event!" FontSize="30" HorizontalOptions="Center" VerticalOptions="Center"/>
        
        <Label x:Name="lblCode" HorizontalOptions="Center" VerticalOptions="Center"/>

        <Button Text="Maak event aan" x:Name="btnEventMaken" Clicked="btnEventMaken_Clicked"/>
        
    </StackLayout>
</ContentPage>